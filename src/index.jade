      section#ques1(data-bespoke-state='clean cards')
        h1 HOW HUNGRY ARE YOU?
        h3 ARE YOU REALLY STARVING?</style>
        div.choice
          label(for='little')
            input(type='radio' name='qa-1' value='1' id='little') 
            span  A little
          label(for='hungry')
            input(type='radio' name='qa-1' value='2' id='hungry')
            span  Hungry
          label(for='death')
            input(type='radio' name='qa-1' value='3' id='death')
            span  I'm starving to death
        a(href='#21') Next
      
      section#ques2(data-bespoke-state='clean cards')
        h1 <br/>WHAT KIND OF FOOD DO YOU WANT?<br/><br/>
        div.choice
          label(for='boost')
            input(type='radio' name='qa-2' value='1' id='boost')
            span  The one can boost your mood
          label(for='lemon')
            input(type='radio' name='qa-2' value='2' id='lemon')
            span  The one with lemon feels
          label(for='plain')
            input(type='radio' name='qa-2' value='3' id='plain')
            span  Just the plain one
          label(for='salty')
            input(type='radio' name='qa-2' value='4' id='salty')
            span  Salty one not bad
          label(for='burnt')
            input(type='radio' name='qa-2' value='5' id='burnt')
            span  The one make your tongue burnt
        a(href='#22') Next

      section#ques3(data-bespoke-state='clean cards')
        h1 ARE YOU A VEGETARIAN?
        div.choice
          label(for='yes')
            input(type='radio' name='qa-3' value='1' id='yes')
            span  It's a yes, yes and yes
          label(for='eggs')
            input(type='radio' name='qa-3' value='2' id='eggs')
            span  Yes, but eggs aren't big deal
          label(for='no')
            input(type='radio' name='qa-3' value='3' id='no')
            span  Definitely No
        a(href='#23') Next

      section#ques4(data-bespoke-state='clean cards')
        h1 ARE YOU IN A RUSH?
        div.choice
          label(for='relax')
            input(type='radio' name='qa-4' value='1' id='relax')
            span  No, I'm relaxing myself
          label(for='works')
            input(type='radio' name='qa-4' value='2' id='works')
            span  Well, I still have works to do
          label(for='notime')
            input(type='radio' name='qa-4' value='3' id='notime')
            span  Yes, I don't have much time
        a(href='#24') Next

      section#ques5(data-bespoke-state='clean cards')
        h1 WHAT DO YOU FEEL RIGHT NOW?
        div.choice
          label(for='lazy')
            input(type='radio' name='qa-5' value='1' id='lazy')
            span  I'm too lazy to go out
          label(for='walk')
            input(type='radio' name='qa-5' value='2' id='walk')
            span  I'd like to go for a walk
          label(for='noworry')
            input(type='radio' name='qa-5' value='3' id='noworry')
            span  I don't worry about transport
        a(href='#25') Next

      section#ques6(data-bespoke-state='clean cards')
